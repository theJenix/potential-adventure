<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <TextView
        android:id="@+id/text_lon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/text_lat"
        android:layout_alignBottom="@+id/text_lat"
        android:layout_marginLeft="22dp"
        android:layout_toRightOf="@+id/text_lat"
        android:text="TextView" />

    <TextView
        android:id="@+id/text_lat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="27dp"
        android:layout_marginTop="43dp"
        android:text="TextView" />

    <TextView
        android:id="@+id/long_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/text_lon"
        android:layout_alignLeft="@+id/text_lat"
        android:text="Latitude"
        android:textAppearance="?android:attr/textAppearanceSmall" />

    <TextView
        android:id="@+id/long_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/text_lon"
        android:layout_alignLeft="@+id/text_lon"
        android:text="Longitude"
        android:textAppearance="?android:attr/textAppearanceSmall" />

    <TextView
        android:id="@+id/status_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/text_lon"
        android:layout_marginLeft="31dp"
        android:layout_toRightOf="@+id/long_label"
        android:text="Status"
        android:textAppearance="?android:attr/textAppearanceSmall" />

    <ImageView
        android:id="@+id/status_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/text_lon"
        android:layout_alignLeft="@+id/status_label"
        android:layout_alignRight="@+id/status_label"
        android:layout_alignTop="@+id/text_lon"
        android:src="@drawable/status_good" />

</RelativeLayout>
