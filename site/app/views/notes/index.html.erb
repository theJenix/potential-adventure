<h1>Listing notes</h1>

<table>
  <thead>
    <tr>
      <th>Id</th>
      <th>Title</th>
      <th>Note</th>
      <th>Audio path</th>
      <th>Latitude</th>
      <th>Longitude</th>
      <th>Sender</th>
      <th>Recipient</th>
      <th>Visible range</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @notes.each do |note| %>
      <tr>
        <td><%= note.id %></td>
        <td><%= note.title %></td>
        <td><%= note.note %></td>
        <td><%= note.audio_path %></td>
        <td><%= note.latitude %></td>
        <td><%= note.longitude %></td>
        <td><%= note.sender %></td>
        <td><%= note.recipient %></td>
        <td><%= note.visible_range %></td>
        <td><%= link_to 'Show', note %></td>
        <td><%= link_to 'Edit', edit_note_path(note) %></td>
        <td><%= link_to 'Destroy', note, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Note', new_note_path %>
